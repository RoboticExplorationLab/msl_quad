<?xml version="1.0"?>
<launch>
    <!-- quad joy node-->
    <group ns="ob1">
        <!-- joy -->
        <arg name="teleop_args" default="-att" />

        <node pkg="joy" type="joy_node" name="joy" required="True">
            <param name="autorepeat_rate" value="10" /> <!-- Minimal update rate, Hz -->
            <param name="dev" type="string" value="/dev/input/js1" />
        </node>

        <node pkg="doctoral" type="joy.py" name="teleop" output="screen">
            <param name="offset/x" value="5" />
            <param name="offset/y" value="5" />
        </node> 
    </group>
</launch>
